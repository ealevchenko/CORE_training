@model Product

<div class="card border-primary m-1 р-1">
    <div class="card-header bg-light p-2">
        <h4>
            @Model.Name
            <span class="badge rounded-pill bg-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-body">
        <hЗ>@Model.Name</hЗ>
        @Model.Description
        <h4>@Model.Price.ToString("c")</h4>
        <form id="@Model.ProductID" asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text р-1">
                @Model.Description
                <button type="submit" class="btn btn-secondary btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </span>

        </form>
    </div>

</div>